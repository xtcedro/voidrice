

# Use neovim for vim if present.
[ -x "$(command -v nvim)" ] && alias vim="nvim" vimdiff="nvim -d"

# Use $XINITRC variable if file exists.
[ -f "$XINITRC" ] && alias startx="startx $XINITRC"

[ -f "$MBSYNCRC" ] && alias mbsync="mbsync -c $MBSYNCRC"

# sudo not required for some system commands
for command in mount umount sv pacman updatedb su shutdown poweroff reboot ; do
	alias $command="sudo $command"
done; unset command

se() {
	choice="$(find ~/.local/bin -mindepth 1 -printf '%P\n' | fzf)"
	[ -f "$HOME/.local/bin/$choice" ] && $EDITOR "$HOME/.local/bin/$choice"
	}

# Verbosity and settings that you pretty much just always are going to want.
alias \
	cp="cp -iv" \
	mv="mv -iv" \
	rm="rm -vI" \
	bc="bc -ql" \
	rsync="rsync -vrPlu" \
	mkd="mkdir -pv" \
	yt="yt-dlp --embed-metadata -i" \
	yta="yt -x -f bestaudio/best" \
	ytt="yt --skip-download --write-thumbnail" \
	ffmpeg="ffmpeg -hide_banner"

# Colorize commands when possible.
alias \
	ls="ls -hN --color=auto --group-directories-first" \
	grep="grep --color=auto" \
	diff="diff --color=auto" \
	ccat="highlight --out-format=ansi" \
	ip="ip -color=auto"

# These common commands are just too long! Abbreviate them.
alias \
	ka="killall" \
	g="git" \
	trem="transmission-remote" \
	YT="youtube-viewer" \
	sdn="shutdown -h now" \
	e="$EDITOR" \
	v="$EDITOR" \
	p="pip install" \
	xi="sudo xbps-install" \
	xr="sudo xbps-remove -R" \
	xq="xbps-query" \
	z="zathura" \
	ga="git add . " \
	gc="git commit -m" \
	gp="git push origin" \
	gm="git merge" \

alias \
	lf="lfub" \
	magit="nvim -c MagitOnly" \
	ref="shortcuts >/dev/null; source ${XDG_CONFIG_HOME:-$HOME/.config}/shell/shortcutrc ; source ${XDG_CONFIG_HOME:-$HOME/.config}/shell/shortcutenvrc ; source ${XDG_CONFIG_HOME:-$HOME/.config}/shell/zshnameddirrc"

alias \
      l="ls -cFlah" \
      etc="git clone git@github.com:xtcedro/Etc.git" \
      void="git clone git@github.com:xtcedro/voidrice.git" \
      tire="git clone git@github.com:xtcedro/tire-shop.git" \
      rns="sudo systemctl reload nginx" \
      about="cd $TMP && rm -rf Etc && etc && rm -rf $ABOUT $ABOUT_ES && cp Etc/about.html $ABOUT && cp Etc/about_es.html $ABOUT_ES && rm -rf $GIT && cd  && rns" \
      about2="cd $TMP && rm -rf Etc && etc && rm -rf $ABOUT2 $ABOUT2_ES && cp Etc/about2.html $ABOUT2 && cp Etc/about2_es.html $ABOUT2_ES && rm -rf $GIT && cd && rns" \
      contact="cd $TMP && rm -rf Etc && etc && rm -rf $CONTACT $CONTACT_ES && cp Etc/contact.html $CONTACT && cp Etc/contact_es.html $CONTACT_ES && rm -rf $GIT && cd && rns" \
      home="cd $TMP && rm -rf Etc && etc && rm -rf $HOMEPAGE $HOMEPAGE_ES && cp Etc/index.html $HOMEPAGE && cp Etc/index_es.html $HOMEPAGE_ES && rm -rf $GIT && cd && rns" \
      services="cd $TMP && rm -rf Etc && etc && rm -rf $SERVICES $SERVICES_ES && cp Etc/services.html $SERVICES && cp Etc/services_es.html $SERVICES_ES && rm -rf $GIT && cd && rns"\
      appointments="cd $TMP && rm -rf Etc && etc && rm -rf $APPOINTMENTS $APPOINTMENTS_ES && cp Etc/appointments.html $APPOINTMENTS && cp Etc/appointments_es.html $APPOINTMENTS_ES && rm -rf $GIT && cd && rns" \
      offers="cd $TMP && rm -rf Etc && etc && rm -rf $OFFERS $OFFERS_ES && cp Etc/offers.html $OFFERS && cp Etc/offers_es.html $OFFERS_ES && rm -rf $GIT && cd && rns" \
      style="cd $TMP && rm -rf Etc && etc && rm -rf $STYLE && cp Etc/assets/css/style.css $STYLE && rm -rf $GIT && chmod 775 $STYLE && cd && rns" \
      ch="chromium-browser" \
      dts="ssh -i keys/Milagros.pem admin@domingueztechsolutions.com" \
      okd="ssh -i keys/truecrashcourse.pem admin@okdevs.xyz" \
